<%- include("./partials/headers.ejs"); %>
  <div class="wrapper">
    <%- include("./partials/topbar.ejs"); %>
    <%- include("./partials/sideMenu.ejs"); %>
    <!-- Main content div -->
    <div class='content-wrapper'>
          <div class='container m-auto py-3'>
            <div class="container p-0 py-4">
                <form id="dataSearch_social_message">
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-5 my-1"><input type="date" class="form-control" id="from" name="from"></div>
                        <div class="col-12 col-sm-12 col-md-5 my-1"><input type="date" class="form-control" id="to" name="to"></div>
                        <div class="col-12 col-sm-12 col-md-2 mx-auto my-1"><button class="btn btn-primary">View Data</button></div>
                    </div>
                </form>
            </div>
            <div class="card">
                <div class="card-header border-transparent">
                    <h3 class="card-title">ITEM LIST</h3>
                    <div class="card-tools"><button type="button" data-toggle="modal" data-target="#message_trend_form" class="btn btn-tool"><i class="fas fa-plus"></i></button></div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table m-0">
                            <thead><tr><th>DATE</th><th>DIRECT MESSAGE</th><th>MESSANGER</th></tr></thead>
                            <tbody id="trendList">
                              <%- locals.table_data %>
                              <tr id="tr_total" style="display:table-row;">
                                <td data-label="">TOTAL</td>
                                <td data-label="Tota DM" id="total_dm" class="total_dm"></td>
                                <td data-label="Total MESSANER" id="total_messanger" class="total_messanger"></td>
                              </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-2 mx-auto my-2"><button class="btn btn-primary" id="download_messages_csv"><i class="fa fa-download" aria-hidden="true"></i> DOWNLOAD CSV</button></div>
          </div>
    </div>

    <!-- pop up the form for entering phone number-->
    <div class="modal fade" id="message_trend_form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <br>
            <form id="message_trend">
              <div class="modal-body">
                <div class="form-group text-center">
                  <input type="date" class="form-control text-center" style="text-transform: none;" id="new_trend_date" name="new_trend_date" autocomplete="off">
                </div>
                <div class="form-group text-center">
                  <input type="number" class="form-control  text-center" style="text-transform: none;" id="new_dms" name="new_dms" autocomplete="off" placeholder="Direct Message">
                </div>
                <div class="form-group text-center">
                  <input type="number" class="form-control  text-center" style="text-transform: none;" id="new_messanger" name="new_messanger" autocomplete="off" placeholder="Messanger">
                </div>
              </div>
              <div id="mediaresp" style="text-align:center;"></div>
              <div class="modal-footer border-top-0 d-flex justify-content-center"><button type="submit" class="btn btn-primary rounded-pill">Submit</button></div>
            </form>
          </div>
        </div>
    </div>
    <!-- middle footer -->


    <%- include("./partials/middle_footer.ejs"); %>
  </div>
<%- include("./partials/footer.ejs"); %>