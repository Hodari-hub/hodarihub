<%- include("./partials/headers.ejs"); %>
    <div class="wrapper">
        <%- include("./partials/topbar.ejs"); %>
        <%- include("./partials/sideMenu.ejs"); %>
        <!-- Main content div -->
        <div class="content-wrapper">
            <div class="p-4">
                <% if(locals.showbtn==1||locals.isAdmin==1){%> <a href="/edit_user/<%- locals.userid %>" class="btn btn-info">EDIT</a><%}%>
                <% if(locals.isAdmin){%> <button id="delete_user" data-userid="<%- locals.userid %>" class="btn btn-danger">DELETE</button><%}%>
            </div>
            <div class="row m-0">
                <div class="col-6">
                    <div class='py-4 row container-fluid m-auto'>
                        <div class="col">
                            <!-- Widget: user widget style 2 -->
                            <div class="card card-widget widget-user-2">
                              <!-- Add the bg color to the header using any of the bg-* classes -->
                              <div class="widget-user-header bg-warning">
                                <div class="widget-user-image">
                                  <img class="img-circle elevation-2" src="<%- locals.m_pic %>" alt="User Profile">
                                </div>
                                <!-- /.widget-user-image -->
                                <h3 class="widget-user-username"><%- locals.m_name %></h3>
                                <h5 class="widget-user-desc"><%- locals.m_type %></h5>
                              </div>
                              <div class="card-footer p-0">
                                <ul class="nav flex-column">
                                  <li class="nav-item p-3"> Home Address:&nbsp; <%- locals.user_location %></li>
                                  <li class="nav-item p-3"> Phone Number:&nbsp; <%- locals.m_phone_number %></li>
                                  <li class="nav-item p-3"> Phone Number:&nbsp; <%- locals.m_sec_number %></li>
                                  <li class="nav-item p-3"> Email Address:&nbsp; <%- locals.m_email %></li>
                                </ul>
                                <p class="p-3"><%- locals.m_description %></p>
                              </div>
                            </div>
                            <!-- /.widget-user -->

                            <div class="card">
                                <div class="card-header border-transparent">
                                    <h3 class="card-title">ALL BOTS</h3>
                                    <div class="card-tools"><a href="/media"><button type="button" class="btn btn-tool"><i class="fas fa-plus"></i></button></a></div>
                                </div>
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table m-0">
                                            <thead><tr><th>ID</th><th>BOTS NAME</th><th>TWEETS</th><th>RETWEETS</th><th>IMPRESSION</th></tr></thead>
                                            <tbody>
                                                <%- locals.bots %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="row py-4">

                        <div class="col-12 col-sm-6 col-md-6">
                          <div class="info-box">
                            <span class="info-box-icon bg-info elevation-1"><i class="fas fa-rss"></i></span>
                            <div class="info-box-content">
                              <span class="info-box-text">Posts</span>
                              <span class="info-box-number"> <%- locals.numpost %></span>
                            </div>
                          </div>
                        </div>

                        <div class="col-12 col-sm-6 col-md-6">
                          <div class="info-box mb-3">
                            <span class="info-box-icon bg-danger elevation-1"><i class="fas fa-retweet"></i></span>
                            <div class="info-box-content">
                              <span class="info-box-text">Retweets</span>
                              <span class="info-box-number"><%- locals.numrt %></span>
                            </div>
                          </div>
                        </div>

                        <div class="clearfix hidden-md-up"></div>
                        <div class="col-12 col-sm-6 col-md-6">
                          <div class="info-box mb-3">
                            <span class="info-box-icon bg-success elevation-1"><i class="fas fa-eye"></i></span>
                            <div class="info-box-content">
                              <span class="info-box-text">Impression</span>
                              <span class="info-box-number"><%- locals.impres %></span>
                            </div>
                          </div>
                        </div>

                        <div class="col-12 col-sm-6 col-md-6">
                          <div class="info-box mb-3">
                            <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-chart-line"></i></span>
                            <div class="info-box-content"> 
                                <span class="info-box-text">Reach</span> 
                                <span class="info-box-number"><%- locals.reach %></span>
                            </div>
                          </div>
                        </div>
                      </div>
                </div>
            </div>
        </div>
        <!-- middle footer -->
        <%- include("./partials/middle_footer.ejs"); %>
    </div>
<%- include("./partials/footer.ejs"); %>