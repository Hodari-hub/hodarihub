<div class="row col-6 mx-auto p-4 my-4" style="margin-top: 50px !important;">
    <form style="width:100%;" class="text-center" id="editbotForm">
        <input type="hidden" name="bot_id" id="bot_id" value="<%- locals.botid %>">
        <div class="form-group">
            <label for="bots_name">Bot Name</label>
            <input type="text" id="bots_name" name="bots_name" class="form-control text-center" placeholder="Enter Bot Name" value="<%- locals.bot_name %>">
        </div>
        <div class="form-group">
            <label for="bots_ac_id">Bot Id</label>
            <input type="text" id="bots_ac_id" name="bots_ac_id" class="form-control text-center" placeholder="Enter Bot Id" value="<%- locals.bots_id %>">
        </div>
        <div class="form-group">
            <label for="medianame">Media Name</label>
            <select id="medianame" name="medianame" class="form-control text-center">
                <option value="facebook" <% if(locals.medianame=="facebook"){%> selected <%}%>>Facebook</option>
                <option value="instagram" <% if(locals.medianame=="instagram"){%> selected <%}%>>Instagram</option>
                <option value="jamiiforums" <% if(locals.medianame=="jamiiforums"){%> selected <%}%>>Jamii Forums</option>
                <option value="twitter" <% if(locals.medianame=="twitter"){%> selected <%}%>>Twitter</option>
                <option value="youtube" <% if(locals.medianame=="youtube"){%> selected <%}%>>You Tube</option>
            </select>
        </div>
        <div class="form-group">
            <label for="owner_id">Owner Name</label>
            <select id="owner_id" name="owner_id" class="form-control text-center">
                <%- locals.memberlist %>
            </select>
        </div>
        <div class="form-group">
            <label for="media_address">Email Address</label>
            <input type="email" name="media_address" id="media_address" class="form-control text-center" placeholder="Email used to register Bot" value="<%- locals.media_address %>">
        </div>
        <div class="form-group">
            <label for="bots_phone">Phone Number</label>
            <input type="tel" name="bots_phone" id="bots_phone" class="form-control text-center" placeholder="Bot Phone Number" value="<%- locals.bot_phone %>">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="text" name="password" id="password" class="form-control text-center" placeholder="Password" value="<%- locals.media_password %>">
        </div>
        <div class="form-group">
            <label for="api_key">API Key</label>
            <input type="text" name="api_key" id="api_key" class="form-control text-center"  placeholder="API Key" value="<%- locals.api_key %>">
        </div>
        <div class="form-group">
            <label for="apisecret">API Secrete</label>
            <input type="text" name="apisecret" id="apisecret" class="form-control text-center" placeholder="API Secrete" value="<%- locals.apisecret %>">
        </div>
        <div class="form-group">
            <label for="access_token">Access Token</label>
            <input type="text" name="access_token" id="access_token" class="form-control text-center"  placeholder="Access Token" value="<%- locals.access_token %>">
        </div>
        <div class="form-group">
            <label for="access_secret">Access Token Secret</label>
            <input type="text" name="access_secret" id="access_secret" class="form-control text-center" placeholder="Access Token Secret" value="<%- locals.access_secret %>">
        </div>
        <div class="form-group">
            <label for="baretoken">Bare Token</label>
            <input type="text" name="baretoken" id="baretoken" class="form-control text-center" placeholder="Enter Bare Token">
        </div>
        <div class="form-group">
            <label for="description">Bot Profile</label>
            <textarea class="form-control text-center" name="description" id="description" rows="3" placeholder="Any Description"><%- locals.description %></textarea>
        </div>
        <div style="text-align:center !important;" id="editbot_res"></div>
        <button type="submit" class="btn btn-primary mx-auto">EDIT BOT</button>
    </form>
</div>