<%- include("./partials/headers.ejs"); %>
  <div class="wrapper">
    <%- include("./partials/topbar.ejs"); %>
    <%- include("./partials/sideMenu.ejs"); %>
    <!-- Main content div -->
    <div class='content-wrapper'>
        <div class='container m-auto py-3 col-6'>
            <div class="card">
                <div class="card-header border-transparent">
                    <h3 class="card-title"></h3>
                    <div class="card-tools">
                        <button type="button" data-toggle="modal" data-target="#new_tone_form" class="btn btn-tool"><i class="fas fa-plus"></i></button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table m-0">
                            <thead><tr><th>ID</th><th>MEMBER NAME</th><th>ACTION</th></tr></thead>
                            <tbody id="tonality_member">
                                <%- locals.tone_member %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- pop up the form for entering phone number-->
    <div class="modal fade" id="new_tone_form" tabindex="-1" aria-labelledby="exampleModalLabel" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <form id="new_member_tonolity">
              <div class="modal-body">
                <div class="form-group">
                    <input type="text" class="form-control" id='member_name' name='member_name' placeholder="Member Name" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id='password' name='password' placeholder="User Password" required>
                </div>
                <div class="d-flex justify-content-center"><button type="submit" class="btn btn-primary">Add Member</button></div>
              </div>
            </form>
          </div>
        </div>
    </div>
    <!-- middle footer -->
    <%- include("./partials/middle_footer.ejs"); %>
  </div>
<%- include("./partials/footer.ejs"); %>